@model IEnumerable<MidTest.Models.Book>

@{
  ViewData["Title"] = "Lei's Library";
}

<h1>@ViewBag.Ttile</h1>

<p>
  <a asp-action="Create">Create New</a>
</p>
<p>Number of new book records created in this session: @Context.Session.GetInt32("NumRecordsCreated")</p>
@await Html.PartialAsync("_Menu")
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.ISBN)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Title)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Author)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Area)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Genre)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Area)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.PubID">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.PubID">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.PubID">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
